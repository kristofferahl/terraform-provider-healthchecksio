root = true

; Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace  = true
charset = utf-8

; Golang
[*.go]
indent_style = tab
indent_size = 2

; Terraform
[*.tf]
indent_style = space
indent_size = 2
